<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.ericguti.cursojedi.jedi15" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <service android:name=".MusicBoundService">
        <intent-filter>
            <action android:name="BOUNDSERVICE"></action>
        </intent-filter>
    </service>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".CalculadoraActivity"
            android:label="@string/title_activity_calculadora" >
        </activity>
        <activity
            android:name=".PerfilActivity"
            android:label="@string/title_activity_perfil" >
        </activity>
        <activity
            android:name=".MusicActivity"
            android:label="@string/title_activity_music"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name=".memoryActivity"
            android:label="@string/title_activity_memory"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name=".RankingActivity"
            android:label="@string/title_activity_ranking" >
        </activity>
        <activity
            android:name=".YodaActivity"
            android:label="@string/title_activity_yoda" >
        </activity>
    </application>

</manifest>
